<main id="wrapper" class="wrapper">
    <section class="wrapper-bottom-sec">
        <div class="p-30">
            <h2 class="page-title">Department</h2>
        </div>
        <div class="p-30 p-t-none p-b-none">
            <div class="row">
                <div class="col-lg-4">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="panel-heading">
                                <h3 class="panel-title">Add Department</h3>
                            </div>
                            <div class="form-group">
                                <label>Department Name</label>
                                <span class="help">e.g. "Account Department"</span>
                                <%= render "departments/form" %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">All Departments</h3>
                        </div>
                        <div class="panel-body p-none">
                            <table class="table data-table table-hover table-ultra-responsive">
                                <thead>
                                    <tr>
                                        <th style="width: 10%;">SL#</th>
                                        <th style="width: 55%;">Department Name</th>
                                        <th style="width: 35%;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @departments.each do |department| %>
                                        <tr>
                                            <td><%= department.id %></td>
                                            <td><%= department.name %></td>
                                            <td>
                                                <%= link_to 'Edit', edit_department_path(department), class: "btn btn-success btn-xs" %>
                                                <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger btn-xs" %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>