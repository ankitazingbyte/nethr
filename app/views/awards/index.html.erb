<main id="wrapper" class="wrapper">
    <section class="wrapper-bottom-sec">
        <div class="p-30">
            <h2 class="page-title">Award List</h2>
        </div>
        <div class="p-30 p-t-none p-b-none">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">Award List</h3>
                            <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#add-new-award"><i class="fa fa-plus"></i> Add New Award</button>
                            <br>
                        </div>
                        <div class="panel-body p-none">
                            <table class="table data-table table-hover table-ultra-responsive">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">SL#</th>
                                        <th style="width: 10%;">Employee Code</th>
                                        <th style="width: 25%;">Award Name</th>
                                        <th style="width: 25%;">Gift</th>
                                        <th style="width: 15%;">Month</th>
                                        <th style="width: 20%;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @awards.each do |award| %>
                                        <tr>
                                            <td data-label="SL"><%= award.id %></td>
                                            <td data-label="emoployeCode"><p>5874698</p></td>
                                            <td data-label="Award"><p><%= award.name %></p></td>
                                            <td data-label="gift"><p><%= award.gift %></p></td>
                                            <td data-label="month"><p><%= award.month %> <%= award.year %> </p></td>
                                            <td><%= link_to 'Edit', edit_award_path(award), class: "btn btn-success btn-xs" %>
                                                <%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>