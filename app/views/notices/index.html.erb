<main id="wrapper" class="wrapper">
    <section class="wrapper-bottom-sec">
        <div class="p-30">
            <h2 class="page-title">Notice Board</h2>
        </div>
        <div class="p-30 p-t-none p-b-none">
          <div class="row">
            <div class="col-lg-12">
                  <div class="panel">
                      <div class="panel-heading">
                          <h3 class="panel-title">Notice Board</h3>
                          <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#add-new-notice"><i class="fa fa-plus"></i> Add New Notice</button>
                          <br>
                      </div>
                      <div class="panel-body p-none">
                          <table class="table data-table table-hover table-ultra-responsive">
                              <thead>
                              <tr>
                                  <th style="width: 5%;">SL#</th>
                                  <th style="width: 50%;">Title</th>
                                  <th style="width: 25%;">Status</th>
                                  <th style="width: 20%;">Actions</th>
                              </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <% @notices.each do |notice| %>
                                    <td data-label="SL"><%= notice.id %></td>
                                    <td data-label="Title"><p><%= notice.title %></p></td>
                                    <td data-label="Status"><p class="btn btn-success btn-xs"><%= notice.description %></p></td>
                                    <td data-label="Actions">
                                      <%= link_to 'Edit', edit_notice_path(notice), class: "btn btn-success btn-xs" %>
                                      <%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
                                    </td>
                                  <% end %>
                                </tr>                    
                              </tbody>
                          </table>
                      </div>
                  </div>
            </div>
          </div>
        </div>
    </section>
</main>