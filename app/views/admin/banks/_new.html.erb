<%= form_for Admin::Bank.new do |form| %>
  <div class="form-group">
      <label>Bank Name</label>
      <span class="help">e.g. "United State Bank"</span>
      <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
      <label>Branch Name</label>
      <span class="help">e.g. "Washington Branch"</span>
       <%= form.text_field :branch_name, class: "form-control" %>
  </div>

  <div class="form-group">
      <label>Account Name</label>
      <span class="help">e.g. "Abul Kashem Shamim"</span>
      <%= form.text_field :account_name, class: "form-control" %>
  </div>

  <div class="form-group">
      <label>Account Number</label>
      <span class="help">e.g. "1015463115661214"</span>
      <%= form.text_field :account_number, class: "form-control" %>
  </div>

  <div class="form-group">
      <label>IFSC Code</label>
      <%= form.text_field :ifsc_code, class: "form-control" %>
  </div>

  <div class="form-group">
      <label>PAN Number</label>
       <%= form.text_field :pan_number, class: "form-control" %>
  </div>
  <%= form.submit "Add", class: "btn btn-success btn-sm pull-right" %>
<% end %>
