          <div id="error_explanation">
            <h2><%= pluralize(admin_evaluation.errors.count, "error") %> prohibited this admin_evaluation from being saved:</h2>

            <ul>
            <% admin_evaluation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
            <label>Training Title</label>
            <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Training Evaluations Description</label>
            <%= form.text_field :description, class: "form-control" %>
        </div>
          <%= form.submit "Add", class: "btn btn-success btn-sm pull-right" %>
      <% end %>
    </div>
  </div>
</div>