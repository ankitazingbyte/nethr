<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">Award List</h2>
  </div>
    <div class="p-30 p-t-none p-b-none">
      <div class="row">
          <div class="col-lg-12">
              <div class="panel">
                  <div class="panel-heading">
                      <h3 class="panel-title">Award List</h3>
                      <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#add-new-award"><i class="fa fa-plus"></i> Add New Award</button>
                      <br>
                  </div>
                  <div class="panel-body p-none">
                      <table class="table data-table table-hover table-ultra-responsive">
                        <thead>
                        <tr>
                            <th style="width: 5%;">SL#</th>
                            <th style="width: 10%;">Employee Code</th>
                            <th style="width: 25%;">Award Name</th>
                            <th style="width: 25%;">Gift</th>
                            <th style="width: 15%;">Month</th>
                            <th style="width: 20%;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                          <% @admin_awards.each do |admin_award| %>
                            <tr>
                                <td data-label="SL"><%= admin_award.id %></td>
                                <td data-label="emoployeCode"><p><%= admin_award.employee_id %></p></td>
                                <td data-label="Award"><p><%= admin_award.name %></p></td>
                                <td data-label="gift"><p><%= admin_award.gift_item %></p></td>
                                <td data-label="month"><p><%= admin_award.month %> <%= admin_award.year %></p></td>
                                <td data-label="Actions">
                                    <%= link_to 'Edit', edit_admin_award_path(admin_award), class: "btn btn-success btn-xs" %>
                                    <%= link_to 'Destroy', admin_award, class: "btn btn-danger btn-xs",method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
    </div>
</section>


