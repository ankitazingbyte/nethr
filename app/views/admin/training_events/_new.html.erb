<%= form_for Admin::TrainingEvent.new do |form| %>
    <div class="modal-body">
        <div class="form-group">
            <label>Training Type</label>
            <%= form.select :training_type, %w{Online Seminar Workshop}, :prompt => 'Select', required: true, class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Training Subject</label>
                <%= form.select :subject, %w{Employee-Development IT-Training Finance-Training}, :prompt => 'Select', required: true, class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Nature Of Training</label>
               <%= form.select :nature_of_training, %w{Internal External}, :prompt => 'Select', required: true, class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Training Title</label>
             <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Training Location</label>
            <%= form.text_field :location, class: "form-control" %>        
        </div>

        <div class="form-group">
            <label>Sponsored By</label>
            <%= form.text_field :sponsored_by, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Organized By</label>
            <%= form.text_field :organized_by, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Training From</label>
            <%= form.text_field :training_from, class: "form-control", "data-provide" => 'datepicker' %>
        </div>

        <div class="form-group">
            <label>Training To</label>
            <%= form.text_field :training_to, class: "form-control", "data-provide" => 'datepicker' %>
        </div>

        <div class="form-group">
            <label>Employee</label>
            <%= form.select :admin_employee_id, Admin::Employee.all.map{|e| [e.first_name, e.id]}, class: "btn dropdown-toggle btn-default" %>
        </div>

        <div class="form-group">
            <label>Trainer</label>
            <%= form.select :admin_trainer_id, Admin::Trainer.all.map{|e| [e.first_name, e.id]}, class: "btn dropdown-toggle btn-default" %>
        </div>

        <div class="form-group">
            <label>Status</label>
            <%= form.select :status, %w{Pending Started Complete}, :prompt => 'Select', required: true, class: 'form-control' %>
        </div>

        <div class="form-group">
            <label>Externals</label>
            <%= form.cktext_area :external, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Training Description</label>
            <%= form.cktext_area :description, class: "form-control" %>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" name="_token" value="CagNIg6L3NAkhODzZFA8kLrjpqxjaeYJDdQMe5so">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
<% end %>