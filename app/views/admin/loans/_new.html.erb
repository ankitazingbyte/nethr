<%= form_for Admin::Loan.new do |form| %>
    <div class="modal-body">
        <div class="form-group">
            <label>Employee Name</label>
            <%= form.number_field :admin_employee_id, class: "form-control" %>      
        </div>

        <div class="form-group">
            <label for="fname">Title</label>
            <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
            <label for="fname">Loan Date</label>
            <%= form.text_field :loan_date, class: "form-control" %>
        </div>

        <div class="form-group">
            <label for="fname">Loan Amount</label>
            <%= form.text_field :loan_amount, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Include Loan Amount in Payslip</label>
            <div class="form-group">
                <div class="coder-radiobox radio-inline">
                    <input type="radio" name="payslip" value="yes" checked><span class="co-radio-ui"></span><label>Yes</label>
                </div>

                <div class="coder-radiobox radio-inline">
                    <input type="radio" name="payslip" value="no"><span class="co-radio-ui"></span><label>No</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="fname">Monthly Repayment Amount</label>
            <%= form.text_field :monthly_payement, class: "form-control" %>
        </div>

        <div class="form-group">
            <label for="fname">Repayment Start Date</label>
            <%= form.text_field :repayment_start_date, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Status</label>
            <%= form.text_field :status, class: "form-control" %>
        </div>

        <div class="form-group">
            <label>Description</label>
            <%= form.cktext_area :description, class: "form-control" %>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" name="_token" value="jK00MQgg8FOpc0dIcjWt6qsmormt4RmcTVwoKBXj">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit "Add", class: "btn btn-primary" %>
    </div>
<% end %>