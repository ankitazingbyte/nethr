<section class="wrapper-bottom-sec">
    <div class="p-30">
        <h2 class="page-title">Employee Payroll Summery</h2>
    </div>
    <div class="p-30 p-t-none p-b-none">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Employee Payroll Summery</h3>
                    </div>
                    <div class="panel-body p-none">
                        <table class="table data-table table-hover table-ultra-responsive">
                            <thead>
                                <tr>
                                    <th style="width: 10%;">Code#</th>
                                    <th style="width: 20%;">Name</th>
                                    <th style="width: 20%;">Username</th>
                                    <th style="width: 20%;">Designation</th>
                                    <th style="width: 30%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @admin_employees.each do |admin_employee| %>
                                    <tr>
                                        <td data-label="SL"><%= admin_employee.id %></td>
                                        <td data-label="Name"><p><%= admin_employee.first_name %><%= admin_employee.last_name %></p></td>
                                        <td data-label="Username"><p><%= admin_employee.user_name %></p></td>
                                        <td data-label="Designation"><p><%#= admin_employee.admin_designation.name %></p></td>
                                        <td data-label="Actions">
                                            <a class="btn btn-success btn-xs" href="#" data-toggle="modal" data-target=".modal_get_salary_statement_3"><i class="fa fa-line-chart"></i>Salary Statement</a>
                                            <div class="modal fade modal_get_salary_statement_3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                            <h4 class="modal-title" id="myModalLabel">Salary Statement</h4>
                                                        </div>
                                                        <% form_tag admin_home_payroll_summery_path, :method => 'get' do %>
                                                            <%= text_field_tag :search, params[:search] %>
                                                            <div class="modal-body">
                                                                <div class="form-group">
                                                                    <label>Date From :</label>
                                                                    <%= text_field_tag 'search[date_form]', @search.date_form %>
                                                                </div>
                                                                <br>
                                                                <br>
                                                                <div class="form-group">
                                                                    <label>Date To :</label>
                                                                    <%= text_field_tag 'search[date_to]', @search.date_to %>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <input type="hidden" name="_token" value="rzT06BX1CL0PzIecaUvAQT3VnoQvkn4SpksAA3A1">
                                                                <input type="hidden" name="cmd" value="3">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                                <%= submit_tag "submit", class: "btn btn-primary" %>
                                                            </div>
                                                        <% end %>
                                                    </div>
                                                </div>
                                            </div>
                                            <a class="btn btn-complete btn-xs" href="http://coderpixel.com/demo/advanced-hrm/reports/employee-summery/3" ><i class="fa fa-bar-chart"></i> Employee Summery</a>
                                        </td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>