<section class="wrapper-bottom-sec">
    <div class="p-30">
        <h2 class="page-title">Support Tickets</h2>
    </div>
    <div class="p-30 p-t-none p-b-none">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Support Tickets</h3>
                    </div>
                    <div class="panel-body p-none">
                        <table class="table data-table table-hover table-ultra-responsive">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Employee Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th class="text-right">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% @admin_tickets.each do |admin_ticket| %>
                                    <tr>
                                        <td><a href="http://coderpixel.com/demo/advanced-hrm/support-tickets/view-ticket/1">1</a> </td>
                                        <td><%= admin_ticket.admin_employee_id %></td>
                                        <td>employee@coderpixel.com</td>
                                        <td><%= admin_ticket.subject %></td>
                                        <td><%= admin_ticket.created_at %></td>
                                        <td><span class="label label-success"><%= admin_ticket.status %></span></td>
                                        <td class="text-right">
                                            <%= link_to 'Edit', edit_admin_ticket_path(admin_ticket), class: "btn btn-success btn-xs" %>
                                            <%= link_to admin_ticket, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fa fa-trash"></i> Delete<% end %>
                                        </td>
                                    </tr>
                                <% end %>            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>