<section class="wrapper-bottom-sec">
  <div class="p-30">
      <h2 class="page-title">Create New Ticket</h2>
  </div>
  <div class="p-30 p-t-none p-b-none">
      <div class="row">
          <div class="col-lg-7">
              <div class="panel">
                  <div class="panel-heading">
                      <h3 class="panel-title">Create New Ticket</h3>
                  </div>
                  <div class="panel-body">
                    <%= form_with(model: admin_ticket, local: true) do |form| %>
                      <% if admin_ticket.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(admin_ticket.errors.count, "error") %> prohibited this admin_ticket from being saved:</h2>

                          <ul>
                          <% admin_ticket.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <div class="form-group">
                          <label for="cid">Ticket For Client</label>
                          <%= form.number_field :admin_employee_id, class: "form-control" %>
                      </div>

                      <div class="form-group">
                          <label for="subject">Subject</label>
                          <%= form.text_field :subject, class: "form-control" %>
                      </div>

                      <div class="form-group">
                          <label for="message">Message</label>
                          <%= form.cktext_area :message, class: "ckeditor" %>
                      </div>

                      <div class="form-group">
                          <label for="did">Department</label>
                          <%= form.text_field :admin_department_id, class: "form-control" %>
                      </div>
                      
                      <%= form.submit "Create Ticket", class: "btn btn-success" %>
                    <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>



                                