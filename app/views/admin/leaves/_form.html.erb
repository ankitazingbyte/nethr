<%= form_for @admin_leave do |form| %>
    <div class="form-group">
      <label>Employee</label>
      <%= form.select :admin_employee_id, Admin::Employee.all.map{|d| [d.first_name, d.id]}, class: "form-control selectpicker" %>
    </div>

    <div class="form-group">
      <label>Leave Type</label>
      <%= form.select :leave_type, %w{SickLeave CausalLeave EmergencyLeave}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Leave From</label>
      <%= form.text_field :leave_from, class: "form-control", "data-provide" => 'datepicker'  %>
    </div>

    <div class="form-group">
      <label>Leave To</label>
      <%= form.text_field :leave_to, class: "form-control", "data-provide" => 'datepicker'  %>
    </div>

    <div class="form-group">
      <label>Status</label>
      <%= form.select :status, %w{Approved Pending Rejected}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <label>Leave Reason</label>
      <%= form.text_area :reason, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
<% end %>
