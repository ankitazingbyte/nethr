<%= form_for @admin_trainer do |form| %>

    <div class="form-group">
        <label>First Name</label>
        <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <%= form.text_field :lastname, class: "form-control" %> 
    </div>

    <div class="form-group">
        <label>Designation</label>
        <%= form.text_field :designation, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Organization</label>
        <%= form.text_field :organization, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Address</label>
        <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>City</label>
        <%= form.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>State</label>
        <%= form.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Zip Code</label>
        <%= form.text_field :zip_code, class: "form-control" %>
    </div>

    <div class="form-group">
        <label for="Country">Country</label>
        <%= form.text_field :country, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Email</label>
        <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Phone</label>
        <%= form.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Trainer Expertise</label>
        <%= form.cktext_area :trainer_expertise, class: "form-control" %>
    </div>
    <%= form.submit "Update", class: "btn btn-success btn-sm pull-right"%>
<% end %>
