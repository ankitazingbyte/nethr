<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3 class="modal-title">Edit Department</h3>
    </div>
    <%= form_for @admin_employee_role, remote: true do |form| %>     
      <div class="modal-body form-group form-admin">
        <ul class="errors alert-danger"></ul>

        <div class="form-group">
          <label>Role Name</label>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Status</label>
          <%= form.select :status, %w{Active Inactive}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
        </div>
        <%= form.submit "Update", class: "btn btn-success btn-sm pull-right" %>
        <%= link_to "Cancel", "#", class: "btn", data: { dismiss: "modal" } %>
      </div>
    <% end %>
  </div>
</div>