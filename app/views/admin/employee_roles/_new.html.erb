<%= form_for Admin::EmployeeRole.new do |form| %>
  <div class="panel-heading">
    <h3 class="panel-title"> Add Employee Roles</h3>
  </div>
  <div class="form-group">
      <label>Role Name</label>
      <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
      <label>Status</label>
      <%= form.select :status, %w{Active Inactive}, :prompt => 'Select', required: true, placeholder: 'Gender', class: 'form-control' %>
  </div>
  <%= form.submit "ADD", class: "btn btn-success btn-sm pull-right" %>
<% end %>